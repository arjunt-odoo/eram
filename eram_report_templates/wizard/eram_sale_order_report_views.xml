<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_eram_sale_order_report_form" model="ir.ui.view">
        <field name="name">eram.sale.order.report.form</field>
        <field name="model">eram.sale.order.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="from_date"/>
                            <field name="to_date"/>
                            <field name="type"/>
                        </group>
                        <group/>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Print"
                                class="btn btn-primary" type="object"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_eram_sale_order_report" model="ir.actions.act_window">
        <field name="name">Sale Order Report</field>
        <field name="res_model">eram.sale.order.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_eram_sale_order_report"
              action="action_eram_sale_order_report"
              parent="sale.menu_sale_report"/>
</odoo>