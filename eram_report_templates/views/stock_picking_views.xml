<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_inherit_eram" model="ir.ui.view">
        <field name="name">view.picking.form.inherit.eram</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="e_invoice_id" invisible="picking_type_code != 'outgoing'"
                       domain="[('move_type', '=', 'out_invoice')]"/>
            </field>
            <field name="date_done" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="action_reset_to_draft" type="object"
                        string="Reset to Draft" invisible="state != 'done'"/>
            </xpath>
        </field>
    </record>
</odoo>
