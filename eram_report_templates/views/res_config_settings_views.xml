<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_inherit_eram" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.eram</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='pay_invoice_online_setting_container']" position="inside">
                    <setting string="Users to be Alerted on Invoice Payment due" help="Users selected below will be alerted on payment due of invoices.">
                        <field name="alert_user_ids" widget="many2many_tags"/>
                    </setting>
                </xpath>
            </field>
    </record>
</odoo>