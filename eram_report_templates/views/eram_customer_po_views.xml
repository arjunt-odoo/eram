<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_eram_customer_po_list" model="ir.ui.view">
        <field name="name">view.eram.customer.po.list</field>
        <field name="model">eram.customer.po</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="amount_total"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="company_id" column_invisible="1"/>
            </list>
        </field>
    </record>
    <record id="view_eram_customer_po_form" model="ir.ui.view">
        <field name="name">view.eram.customer.po.form</field>
        <field name="model">eram.customer.po</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="amount_total"/>
                            <field name="currency_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="sale_id" string="Quote"/>
                            <field name="advance_amount"/>
                            <field name="advance_date"/>
                            <field name="delivery_date"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_eram_customer_po" model="ir.actions.act_window">
        <field name="name">Customer PO</field>
        <field name="res_model">eram.customer.po</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="manu_eram_customer_po"
              action="action_eram_customer_po"
              sequence="30"/>
</odoo>