<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.form.inherit_eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="sale_order_template_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//group[@name='order_details']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='order_details']" position="after">
                <group>
                    <field name="e_ref" readonly="state == 'sale'"/>
                    <field name="e_sale_id" invisible="1"/>
                    <field name="e_sale_ids" domain="[('e_sale_id', '=', False)]"
                           widget="many2many_tags" invisible="e_sale_id"/>
                </group>
            </xpath>
            <field name="partner_id" position="after">
                <field name="e_revision" readonly="state == 'sale'"/>
                <field name="e_place" readonly="state == 'sale'"/>
                <field name="date_order" readonly="state == 'sale'"/>
                <field name="partner_id" readonly="state == 'sale'"
                       string="Bill To"/>
                <field name="e_subject" readonly="state == 'sale'"/>
                <field name="e_attn" readonly="state == 'sale'"/>
            </field>
            <xpath expr="//notebook//list//field[@name='sequence']" position="after">
                <field name="e_line_index"/>
            </xpath>
            <xpath expr="//notebook//field[@name='product_id']" position="attributes">
                <attribute name="string">ITEM</attribute>
            </xpath>
            <xpath expr="//notebook//list//field[@name='product_template_id']" position="attributes">
                <attribute name="string">ITEM</attribute>
            </xpath>
            <xpath expr="//notebook//list//field[@name='product_template_id']" position="after">
                <field name="e_description"/>
                <field name="product_uom" string="UOM"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <div class="oe_inline">
                    <label for="amount_total_words">TOTAL QUOTE VALUE:</label>
                    <field name="amount_total_words" readonly="state == 'sale'"/>
                </div>
            </xpath>
            <field name="order_line" readonly="state == 'sale'" position="after">
                <group>
                    <group/>
                    <group>
                        <field name="e_packing_and_forwarding" readonly="state == 'sale'"/>
                    </group>
                </group>
            </field>
            <field name="name" position="attributes">
                <attribute name="readonly">state == 'sale'</attribute>
            </field>
            <xpath expr="//notebook//page[@name='order_lines']" position="after">
                <page string="Customer PO">
                    <field name="e_customer_po_ids">
                        <list>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="date"/>
                            <field name="amount_total"/>
                            <field name="currency_id" column_invisible="1"/>
                            <field name="company_id" column_invisible="1"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//notebook//page[@name='other_information']//field[@name='tag_ids']" position="after">
                <field name="e_validity_text"/>
            </xpath>
            <xpath expr="//notebook//page[@name='other_information']//field[@name='invoice_status']" position="after">
                <field name="payment_term_id"/>
            </xpath>
            <xpath expr="//notebook//page[@name='other_information']//field[@name='delivery_status']" position="after">
                <field name="e_delivery_text"/>
            </xpath>
        </field>
    </record>
    <record id="view_order_quote_list_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="create_date" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_order_list_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="date_order"/>
            </field>
        </field>
    </record>
</odoo>