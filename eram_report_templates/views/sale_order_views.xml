<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.form.inherit_eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="sale_order_template_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//group[@name='order_details']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[@name='order_details']" position="after">
                <group>
                    <field name="e_purchase_order_id" domain="[('state', '=', 'purchase')]"/>
                </group>
            </xpath>
            <field name="partner_id" position="after">
                <field name="e_revision"/>
                <field name="e_place"/>
                <field name="date_order"/>
                <field name="partner_id" string="Bill To"/>
                <field name="e_subject"/>
                <field name="e_attn"/>
            </field>
            <xpath expr="//notebook//list//field[@name='sequence']" position="after">
                <field name="e_line_index"/>
            </xpath>
            <xpath expr="//notebook//field[@name='product_id']" position="attributes">
                <attribute name="string">ITEM</attribute>
            </xpath>
            <xpath expr="//notebook//list//field[@name='product_template_id']" position="attributes">
                <attribute name="string">ITEM</attribute>
            </xpath>
            <xpath expr="//notebook//list//field[@name='product_template_id']" position="after">
                <field name="e_description"/>
                <field name="product_uom" string="UOM"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <div class="oe_inline">
                    <label for="amount_total_words">TOTAL QUOTE VALUE:</label>
                    <field name="amount_total_words"/>
                </div>
            </xpath>
            <field name="order_line" position="after">
                <group>
                    <group/>
                    <group>
                        <field name="e_packing_and_forwarding"/>
                    </group>
                </group>
            </field>
            <field name="name" position="attributes">
                <attribute name="readonly">state == 'sale'</attribute>
            </field>
        </field>
    </record>
    <record id="view_order_quote_list_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="create_date" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </field>
        </field>
    </record>
    <record id="view_order_list_inherit_eram" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.eram</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="date_order"/>
            </field>
        </field>
    </record>
</odoo>