<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="eram_report_purchaseorder_document"
              name="Eram Purchase Order Template">
         <t t-call="web.html_container">
             <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <style>
                        .page {
                            font-family: 'Calibri', sans-serif;
                            font-size: 0.7em;
                        }
                        h3 {
                            font-size: 14pt !important;
                            font-weight: bold !important;
                            text-align: center;
                            text-decoration: underline;
                        }
                        .body-text {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .body-text * {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .terms {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .terms * {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .signatures {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .signatures * {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .table-bordered th {
                            font-size: 7pt;
                            font-weight: bold;
                        }
                        .table-bordered td {
                            font-size: 7pt;
                            font-weight: normal;
                        }
                        table {
                            page-break-inside: auto;
                        }
                        tr {
                            page-break-inside: avoid;
                            page-break-after: auto;
                        }
                        thead {
                            display: table-header-group;
                        }
                        .table-bordered {
                            border: 1px solid black;
                            border-collapse: collapse;
                            width: 100%;
                        }
                        .table-bordered th,
                        .table-bordered td {
                            border: 1px solid black;
                            padding: 5px;
                        }
                        .table-bordered tr {
                            break-inside: avoid;
                        }
                        .po-table {
                            width: 100%;
                            border-collapse: collapse;
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .po-table td {
                            padding-left: 5px;
                            border: 1px solid black;
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .po-table .text-center {
                            text-align: center;
                        }
                        .po-table .text-left {
                            text-align: left;
                        }
                        .po-table .text-left-padded {
                            text-align: left;
                            padding-left: 5px !important;
                        }
                        .po-table .width-60 {
                            width: 60%;
                        }
                        .po-table .width-50 {
                            width: 50%;
                        }
                        .po-table .width-21 {
                            width: 21%;
                        }
                        .po-table .width-39 {
                            width: 39%;
                        }
                        .po-table .width-18 {
                            width: 18%;
                        }
                        .po-table .width-22 {
                            width: 22%;
                        }
                        .po-table .width-35 {
                            width: 35%;
                        }
                        .po-table .width-45 {
                            width: 45%;
                        }
                        .po-table .width-40 {
                            width: 40%;
                        }
                        .po-table .width-1 {
                            width: 1%;
                            text-align: center;
                            padding-right:3px;
                        }
                        .po-table .width-34 {
                            width: 35%;
                        }
                        .po-table .width-44 {
                            width: 45%;
                        }
                        .po-table .width-65 {
                            width: 64%;
                        }
                        .po-table .width-55 {
                            width: 54%;
                        }
                        .po-table .border-right {
                            border-right: 1px solid black !important;
                        }
                        .po-table .inner-table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        .po-table .inner-table td {
                            border: none;
                            padding-left: 0;
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .po-table .inner-table .text-left-padded {
                            padding-left: 5px !important;
                        }
                        .header-table {
                            width: 40%;
                            margin-left: auto;
                            border-collapse: collapse;
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        .header-table td {
                            border: 1px solid black;
                            padding: 5px;
                            text-align: center;
                            font-size: 9pt;
                            font-weight: bold;
                        }
                    </style>
                    <div class="page">
                        <div class="text-center">
                            <h3>PURCHASE ORDER</h3>
                        </div>
                        <table class="header-table">
                            <tr>
                                <td><strong>PO #</strong></td>
                                <td><strong>DATE</strong></td>
                                <td><strong>REV.NO.</strong></td>
                            </tr>
                            <tr>
                                <td style="border-bottom: none;"><span t-field="o.name"/></td>
                                <td style="border-bottom: none;"><span t-field="o.date_order"/></td>
                                <td style="border-bottom: none;"><span t-field="o.e_rev_no"/></td>
                            </tr>
                        </table>
                        <table class="po-table">
                            <!-- Second Row -->
                            <tr>
                                <td colspan="4">
                                    <table class="inner-table">
                                        <tr>
                                            <td style="vertical-align: middle;" class="border-right width-21 text-left-padded"><strong>Supplier #</strong></td>
                                            <td style="vertical-align: middle;" class="border-right width-39"> <span style="padding-left: 2px; color: #b00000;" t-field="o.e_supplier_code"/> </td>
                                            <td style="vertical-align: middle;" class="border-right width-18 text-left-padded"><strong>REQ. NO</strong></td>
                                            <td style="vertical-align: middle;" class="width-22"> <span style="padding-left: 2px" t-field="o.e_req_no"/> </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Nine Rows with Two Columns -->
                            <tr>
                                <td colspan="4">
                                    <table class="inner-table">
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">Supplier</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.name"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">SUP. REF</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_supplier_ref"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded" style="vertical-align: middle;">P.O. Box(Address)</td>
                                                        <td class="width-1" style="border: none; vertical-align: middle;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;">
                                                            <t t-if="o.partner_id.street">
                                                                <span t-field="o.partner_id.street"/><br/>
                                                            </t>
                                                            <t t-if="o.partner_id.street2">
                                                                <span t-field="o.partner_id.street2"/><br/>
                                                            </t>
                                                            <span t-field="o.partner_id.state_id"/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40" style="vertical-align: middle;">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded" style="vertical-align: middle;">REF Date</td>
                                                        <td class="width-1" style="border: none; vertical-align: middle;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_ref_date"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">City</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.city"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">No. of Line Items</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-esc="len(o.order_line)"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">Postal Code</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.zip"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Payment Terms</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.payment_term_id"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">Country</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.country_id"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Mode of Shipment</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_mode_of_shipment"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">Telephone</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.phone"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Delivery Terms</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_delivery_terms"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">GST#</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.vat"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Ship to</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_ship_to"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">E-mail</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.partner_id.email"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Delivery Period</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_delivery_period"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="border-right width-60">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-34 text-left-padded">Attn</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-65" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_attn"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                            <td class="width-40">
                                                <table class="inner-table">
                                                    <tr>
                                                        <td class="width-44 text-left-padded">Charge Code</td>
                                                        <td class="width-1" style="border: none;">:</td>
                                                        <td class="width-55" style="vertical-align: middle; padding-left:2px;"><span t-field="o.e_charge_code"/></td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <t t-set="currency" t-value="o.currency_id"/>
                            <!-- Total Purchase Order Value Row -->
                            <tr>
                                <td colspan="4" class="text-left-padded" style="border-bottom: none;">
                                    <div style="padding-top:4px; padding-bottom:4px;">
                                        <strong>TOTAL PURCHASE ORDER VALUE: <span t-field="currency.full_name"/> : </strong>
                                        <span t-field="o.amount_total_words"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="text-center">S.NO</th>
                                        <th class="text-center">ITEM#/ CHARGE CODE</th>
                                        <th class="text-center">DESCRIPTION</th>
                                        <th class="text-center">UOM</th>
                                        <th class="text-center">QTY</th>
                                        <th class="text-center">UNIT PRICE (<span t-field="currency.name"/>)</th>
                                        <th class="text-center">TOTAL PRICE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.order_line" t-as="line">
                                        <tr t-if="not line.display_type">
                                            <td class="text-center"><span t-esc="line_index + 1"/></td>
                                            <td class="text-center"><span t-field="line.e_charge_code"/></td>
                                            <td class="text-center"><span t-field="line.e_description"/></td>
                                            <td class="text-center"><span t-field="line.product_uom.name"/></td>
                                            <td class="text-center"><span t-field="line.product_qty"/></td>
                                            <td class="text-center"><span t-field="line.price_unit"/></td>
                                            <td class="text-center p-1"><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tr style="page-break-inside: avoid;">
                                    <td colspan="6" class="text-end"><strong>TOTAL VALUE : </strong></td>
                                    <td class="text-center p-1"><span t-field="o.amount_untaxed"/></td>
                                </tr>
                                <tr style="page-break-inside: avoid;">
                                    <t t-set="same_tax_base" t-value="o.tax_totals['same_tax_base']"/>
                                    <t t-foreach="o.tax_totals['subtotals']" t-as="subtotal">
                                        <t t-foreach="subtotal['tax_groups']" t-as="tax_group">
                                            <tr class="o_taxes">
                                                <t t-if="same_tax_base or tax_group['display_base_amount_currency'] is None">
                                                    <td colspan="6" class="text-end fw-bold">
                                                        <span class="text-nowrap" t-out="tax_group['group_name']">Tax 15%</span>
                                                    </td>
                                                    <td class="text-center o_price_total">
                                                        <span class="text-nowrap p-1"
                                                              t-out="tax_group['tax_amount_currency']"
                                                              t-options='{"widget": "monetary", "display_currency": currency}'
                                                        >1.05</span>
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td colspan="6" class="text-end fw-bold">
                                                        <span t-out="tax_group['group_name']">Tax 15%</span>
                                                    </td>
                                                    <td class="text-end o_price_total">
                                                        <span class="text-nowrap p-1"
                                                              t-out="tax_group['tax_amount_currency']"
                                                              t-options='{"widget": "monetary", "display_currency": currency}'
                                                        >4.05</span>
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                    </t>
                                </tr>
                                <tr style="page-break-inside: avoid;">
                                    <td colspan="6" class="text-end"><strong>TOTAL PURCHASE ORDER VALUE : </strong></td>
                                    <td class="text-center p-1"><span t-field="o.amount_total"/></td>
                                </tr>
                            </table>
                        <div class="terms">
                            <p>1) Late delivery penalty:  A late delivery penalty shall be imposed from at the rate of 1% per week
                                subject  to a maximum of 10% of the total Purchase Order value.</p>
                            <h5><u> Terms &amp; Conditions</u></h5>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>1)</span>
                                </div>
                                <div class="col-11">
                                    <span>1.1 Design and development control.</span><br/>
                                    <span>1.2 Special requirements, critical items, or key characteristics.</span><br/>
                                    <span>1.3 Test, inspection, and verification (including production process verification).</span><br/>
                                    <span>1.4 The use of statistical techniques for product acceptance and related instructions for acceptance by the organization.</span><br/>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>2)</span>
                                </div>
                                <div class="col-11">
                                    <span>2.1 Implement a quality management system.</span><br/>
                                    <span>2.2 Use customer-designated or approved external providers, including process sources.</span><br/>
                                    <span>2.3 Notify the organization of nonconforming processes, products, or services and obtain approval for their disposition.</span>
                                    <span>2.4 Prevent the use of counterfeit parts.</span><br/>
                                    <span>2.5 Notify the organization of changes to processes, products, or services, including changes of their external providers or location of manufacture, and obtain the organization’s approval.</span><br/>
                                    <span>2.6 Flow down to external providers applicable requirements including customer requirements.</span><br/>
                                    <span>2.7 Provide test specimens for design approval, inspection/verification, investigation, or auditing.</span><br/>
                                    <span>2.8 Retain documented information, including retention periods and disposition requirements.</span><br/>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>3)</span>
                                </div>
                                <div class="col-11">
                                    <span>The right of access by the organization, their customer, and regulatory authorities to the applicable areas of facilities and to applicable documented information, at any level of the supply chain.</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>4)</span>
                                </div>
                                <div class="col-11">
                                    <span>Ensuring that persons are aware of:</span><br/>
                                    <span>4.1 Their contribution to product or service conformity.</span><br/>
                                    <span>4.2 Their contribution to product safety.</span><br/>
                                    <span>4.3 The importance of ethical behaviour.</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>5)</span>
                                </div>
                                <div class="col-11">
                                    <span>Above item (s) should be supplied as per the quotation and all the related clarifications.</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>6)</span>
                                </div>
                                <div class="col-11">
                                    <span>This Purchase Order is issued against your offer / quotation mentioned above. Unless otherwise specified, all applicable terms and conditions thereof and those cited here below shall apply to this order.  Any exception should be kept informed while acknowledging the order.</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>7)</span>
                                </div>
                                <div class="col-11">
                                    <span>Order confirmation: Within 2 days upon receipt of this order (by fax or e-mail), supplier shall acknowledge to the buyer, acceptance of this order.  Failure to confirm or acknowledge this order and its terms and conditions, will be presumed as acceptance within the prescribed period.</span>
                                </div>
                            </div>
                            <br/>
                            <div class="row align-items-center" style="page-break-inside: avoid;">
                                <div class="col-1">
                                    <span>8)</span>
                                </div>
                                <div class="col-11">
                                    <span>For payments, kindly contact our Senior Accountant Mr. Mohammed Sirajudheen K.</span><br/>
                                    <span>Mail Id: accounts.blr@eramelectronics.com, Phone: +91-7090779737.</span>
                                </div>
                            </div>
                        </div>
                        <div class="row signatures mt-4" style="page-break-inside: avoid; padding-top:40px;">
                            <div class="col-3 text-center">
                                <p><strong>Prepared by:</strong></p>
                                <br/>
                                <br/>
                                <p><strong>Mark Dass</strong></p>
                                <p><strong>Office Assistant</strong></p>
                            </div>
                            <div class="col-3 text-center">
                                <p><strong>Reviewed by:</strong></p>
                                <br/>
                                <br/>
                                <p><strong>Sneha John</strong></p>
                                <p><strong>Project Manager</strong></p>
                            </div>
                            <div class="col-3 text-center">
                                <p><strong>Reviewed by:</strong></p>
                                <br/>
                                <br/>
                                <p><strong>Mohammed Sirajudheen K</strong></p>
                                <p><strong>Senior Accountant</strong></p>
                            </div>
                            <div class="col-3 text-center">
                                <p><strong>Approved by:</strong></p>
                                <br/>
                                <br/>
                                <p><strong>Basil Issac</strong></p>
                                <p><strong>Vice President R&amp;D</strong></p>
                            </div>
                        </div>
                    </div>
                </t>
             </t>
         </t>
    </template>
</odoo>