<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_eram_outward_form" model="ir.ui.view">
        <field name="name">view.eram.outward.form</field>
        <field name="model">eram.outward</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1 class="d-flex">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="project_id"/>
                            <field name="requested_by_id"/>
                            <field name="approved_by_id"/>
                        </group>
                        <group>
                            <field name="justification"/>
                            <field name="task_id"/>
                            <field name="requested_by_dept_id"/>
                            <field name="approved_by_dept_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Components">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="si_no"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="uom_id" domain="[('category_id' , '=', product_uom_category_id)]"/>
                                    <field name="product_uom_category_id" column_invisible="1"/>
                                    <field name="qty"/>
                                    <field name="required_date"/>
                                    <field name="remarks"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
        <record id="view_eram_outward_list" model="ir.ui.view">
        <field name="name">view.eram.outward.list</field>
        <field name="model">eram.outward</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="justification"/>
                <field name="project_id"/>
                <field name="task_id"/>
            </list>
        </field>
    </record>
    <record id="action_eram_outward" model="ir.actions.act_window">
        <field name="name">Outwards</field>
        <field name="res_model">eram.outward</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_eram_outward" action="action_eram_outward" sequence="50"/>
</odoo>