<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="edit_project_inherit_eram_inventory" model="ir.ui.view">
        <field name="name">project.project.form.inherit.eram.inventory</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_inwards" icon="fa-solid fa-inbox">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Inwards</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
    <record id="view_task_form2_inherit_eram_inventory" model="ir.ui.view">
        <field name="name">project.task.form.inherit.eram.inventory</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_inwards" icon="fa-solid fa-inbox">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Inwards</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_inward_items" icon="fa-solid fa-list">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Inward Items</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_purchase_order" icon="fa-pencil-square-o">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Purchase Orders</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_locations" icon="fa-location-arrow">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Locations</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_valuation" icon="fa-fw fa-dollar">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Valuation</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_purchase_request" icon="fa-bell">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Purchase Request</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>