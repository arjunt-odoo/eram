<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_hier" model="ir.ui.view">
        <field name="name">product.template.form.inherit.hier</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_invoice_lines"
                        invisible="type != 'service'" icon="fa-solid fa-list-ul">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Invoice Lines</span>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_stock_valuation"
                        invisible="not is_storable" icon="fa-fw fa-dollar">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Valuation</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Categories">
                    <field name="e_categ_ids" domain="[('parent_id', '=', False)]">
                        <list>
                            <field name="name"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//header/button" position="before">
                    <button string="Create Variants" type="object"
                        name="action_create_eram_variants"
                        invisible="not e_categ_ids"/>
            </xpath>
            <field name="invoice_policy" position="after">
                <field name="e_allow_inspection"/>
            </field>
        </field>
    </record>
</odoo>