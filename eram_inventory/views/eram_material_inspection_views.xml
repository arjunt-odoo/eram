<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="eram_material_inspection_view_form" model="ir.ui.view">
        <field name="name">eram.material.inspection.view.form</field>
        <field name="model">eram.material.inspection</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_inspection_report" string="Print" type="object" class="btn btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="project_code"/>
                            <field name="pr_no"/>
                            <field name="purchase_id"/>
                        </group>
                        <group>
                            <field name="inspected_date"/>
                            <field name="picking_id" string="Inward" domain="[('e_material_inspection_id', '=', id)]"/>
                            <field name="date_received"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="order_lines" string="Order Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="e_si_no" readonly="1"/>
                                    <field name="e_make" readonly="1"/>
                                    <field name="e_part_no" readonly="1"/>
                                    <field name="e_description" readonly="1"/>
                                    <field name="e_visual_inspection"/>
                                    <field name="e_dimensional_inspection"/>
                                    <field name="e_functional_inspection"/>
                                    <field name="e_remarks"/>
                                    <field name="e_qty_accepted"/>
                                    <field name="e_qty_rejected"/>
                                    <field name="e_rejection_reason"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>