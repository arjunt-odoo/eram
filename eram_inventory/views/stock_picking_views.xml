<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_inherit_eram" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.eram</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_td_label')]" position="before">
                <field name="e_grn_id" invisible="picking_type_code != 'incoming'" domain="[('picking_id', '=', id)]"/>
                <field name="e_bill_id" invisible="picking_type_code != 'incoming'"/>
                <field name="purchase_id" string="P.O. No:" invisible="picking_type_code != 'incoming'"/>
                <field name="e_pr_no" invisible="picking_type_code != 'incoming'"/>
                <field name="e_pr_id" invisible="picking_type_code != 'incoming'"/>
                <field name="e_project_code" invisible="picking_type_code != 'incoming'"/>
                <field name="e_project_id" invisible="picking_type_code != 'incoming'"/>
                <field name="currency_id" invisible="1"/>
            </xpath>
            <xpath expr="//div[hasclass('o_td_label')]/label[@for='partner_id'][2]" position="replace">
                <label for="partner_id" string="Supplier Name" style="font-weight:bold;" invisible="picking_type_code != 'incoming'"/>
            </xpath>
            <field name="picking_type_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//sheet//group/group[2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet//group" position="inside">
                <group>
                    <field name="e_invoice_date" invisible="picking_type_code != 'incoming'"/>
                    <field name="e_invoice_received_date" invisible="picking_type_code != 'incoming'"/>
                    <field name="e_material_inspection_id" domain="[('picking_id', '=', id)]"
                           invisible="picking_type_code != 'incoming'"/>
                </group>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//field[@name='product_id']" position="before">
                <field name="e_si_no" column_invisible="parent.picking_type_code != 'incoming'"/>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//field[@name='product_id']" position="after">
                <field name="e_item_code" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_description" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_part_no" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_make" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_uom_id" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//field[@name='product_uom_qty']" position="attributes">
                <attribute name="string">P.O. QUANTITY</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//field[@name='quantity']" position="attributes">
                <attribute name="string">RECEIVED QUANTITY</attribute>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//field[@name='quantity']" position="after">
                <field name="currency_id" column_invisible="1"/>
                <field name="e_price_unit" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_tax_ids" readonly="state == 'done'" widget="many2many_tags" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_price_total" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_discrepancy" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
                <field name="e_receival_status" readonly="state == 'done'" column_invisible="parent.picking_type_code != 'incoming'"/>
            </xpath>
            <xpath expr="//notebook//page[@name='operations']//button[@name='action_put_in_pack']" position="after">
                <div class="text-end row">
                    <div class="col-8"/>
                    <div class="col-2 text-start">
                        <label for="e_total_untaxed"/>
                    </div>
                    <div class="col-2">
                        <field name="e_total_untaxed" widget='monetary'/>
                    </div>
                </div>
                <div class="text-end row">
                    <div class="col-8"/>
                    <div class="col-2 text-start">
                        <label for="e_amount_total"/>
                    </div>
                    <div class="col-2">
                        <field name="e_amount_total" widget='monetary'/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>