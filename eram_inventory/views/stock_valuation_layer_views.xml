<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="stock_valuation_layer_tree_inherit_eram" model="ir.ui.view">
        <field name="name">stock.valuation.layer.list.inherit.eram</field>
        <field name="model">stock.valuation.layer</field>
        <field name="inherit_id" ref="stock_account.stock_valuation_layer_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="after">
                <field name="department_id" string="Department" optional="show"/>
                <field name="project_id" string="Project Code" optional="show"/>
                <field name="task_id" string="Task" optional="show"/>
            </xpath>
            <xpath expr="//list" position="attributes">
                <attribute name="editable">bottom</attribute>
            </xpath>
        </field>
    </record>
</odoo>