<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="eram_report_rfq">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="e_our_ref" t-value="o.our_ref"/>
                <t t-set="e_date" t-value="o.date"/>
                <t t-call="web.external_layout">
                    <style>
                        .page {
                            font-family: "Cambria", serif;
                        }
                        h3 {
                            font-size: 14pt !important;
                            font-weight: bold !important;
                            text-align: center;
                            text-decoration: underline;
                        }
                        .body-text {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .body-text * {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .terms {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .terms * {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .signatures {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .signatures * {
                            font-size: 11pt;
                            font-weight: bold;
                        }
                        .table-bordered th {
                            font-size: 7pt;
                            font-weight: bold;
                        }
                        .table-bordered td {
                            font-size: 7pt;
                            font-weight: normal;
                        }
                        table {
                            page-break-inside: auto;
                        }
                        tr {
                            page-break-inside: avoid;
                            page-break-after: auto;
                        }
                        thead {
                            display: table-header-group;
                        }
                        .table-bordered {
                            border: 1px solid black;
                            border-collapse: collapse;
                            width: 100%;
                        }
                        .table-bordered th,
                        .table-bordered td {
                            border: 1px solid black;
                            padding: 5px;
                        }
                        .table-bordered tr {
                            break-inside: avoid;
                        }
                        /* LARGER FONT SIZE for ALL content in product items table */
                        #product-items-table th,
                        #product-items-table td,
                        #product-items-table th *,
                        #product-items-table td * {
                            font-size: 12pt !important;
                            font-weight: normal;
                        }
                        #product-items-table th,
                        #product-items-table th * {
                            font-weight: bold !important;
                        }

                        /* Explicit padding for BID INFO block (small table) */
                        #bid-info-table td {
                            padding: 5px !important;
                            font-size: 9pt;
                            font-weight: bold;
                        }

                        /* General text and headings */
                        h5, h6 {
                            font-weight: bold;
                        }
                        p, li, td {
                            font-size: 9pt;
                            font-weight: bold;
                        }
                        strong {
                            font-weight: bold;
                        }

                        /* Right-aligned reference block (not used but kept for consistency) */
                        .ref-block {
                            max-width: 35%;
                            float: right;
                            margin-bottom: 1rem;
                        }
                        .ref-block table {
                            width: 100%;
                        }

                        /* Optional: Zebra striping for product table */
                        #product-items-table tbody tr:nth-child(even) {
                            background-color: #f9f9f9;
                        }

                        /* Force new page for the items section */
                        #items-section {
                            page-break-before: always;
                        }
                    </style>
                    <div class="page">
                        <div class="row mb-3">
                            <div class="text-center">
                                <h6 class="m-0 fw-bold"><u>REQUEST FOR QUOTATION (RFQ)</u></h6>
                            </div>
                        </div>
                        <br/>
                        <div class="clearfix"></div> <!-- Clear float -->

                        <!-- ==================== INTRO TEXT ==================== -->
                        <p class="mb-3 body-text">
                            Please submit your most competitive price and the best delivery time for the item(s) as per the attached list of items,
                            all in accordance with the specification, terms and conditions of this RFQ. In case you are unable to submit a bid,
                            please inform us in the form of a regret letter prior to the bid closing date.
                        </p>
                        <div style="max-width: 60%;">
                            <table id="bid-info-table" class="table table-sm table-bordered mb-4">
                                <tbody>
                                    <tr>
                                        <td><strong>OUR BID CLOSING DATE</strong></td>
                                        <td><span t-esc="o.our_bid_closing_date" t-options="{'widget': 'date'}"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>SEND YOUR OFFER BY</strong></td>
                                        <td><span t-esc="o.send_offer_by"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <!-- ==================== GENERAL TERMS ==================== -->
                        <h5 class="mb-2"><u>GENERAL TERMS &amp; CONDITIONS TO BIDDERS.</u></h5>
                        <br/>

                        <ol class="pl-3 mb-4 terms" style="line-height:1.6;">
                            <li>Total number of item(s) : <strong t-esc="len(o.line_ids)"/></li>
                            <li>Please find enclosed Nil page catalogues / drawings / samples for your reference.</li>
                            <li>Our serial number of item(s) should be maintained / mentioned in your offer.</li>
                            <li>Any deviation from the stipulated delivery date in the Purchase Order would attract penalty strictly
                                at the rate of 1% (percent) per week subject to maximum of 4% (percent) for the order value.</li>
                            <li>Validity of your offer should be minimum 30 days from the due date.</li>
                            <li>Payment by cheque on 30 days credit basis after receipt of original invoice.</li>
                            <li>If you are quoting same item(s) as mentioned in our RFQ, please reproduce complete.</li>
                            <li>In case of alternative offer, please certify “The product offered is exact replacement / identical to your required specifications”</li>
                            <li>EPEC reserve the right to purchase full or only part of item(s) offered herein.</li>
                            <li>Your offer should include delivery of material to our office at
                                <br/>Plot No 110-L/1, Survey No 68, Electronic City Phase-1, Bengaluru-560100.</li>
                            <li>Suppliers should deliver the items only during Monday to Friday from 08.00 am to 04.00 pm.</li>
                        </ol>
                        <div class="row mt-5 signatures">
                            <div class="col">
                                <p class="mb-0">_________________________</p>
                                <p class="mb-0"><strong>Mark Dass</strong></p>
                                <p class="mb-0">Office Assistant</p>
                                <p class="mb-0">Plot No 110-L/1, Survey No 68,</p>
                                <p class="mb-0">Electronic City Phase-1,</p>
                                <p class="mb-0">Bengaluru-560100.</p>
                                <p class="mb-0">Mobile: +91 80954 28115</p>
                                <p class="mb-0">mark.dass@eramelectronics.com</p>
                            </div>

                        </div>
                        <div>
                            <div class="col text-end">
                                <p class="mb-0"><strong>FM-PU-01</strong></p>
                            </div>
                        </div>

                        <!-- Items section starts on a new page -->
                        <div id="items-section">
                            <h5 class="mb-3"><u>LIST OF ITEMS</u></h5>

                            <table id="product-items-table" class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th class="text-center">S.NO.</th>
                                        <th class="text-center">ITEM NO.</th>
                                        <th class="text-center">DESCRIPTION</th>
                                        <th class="text-center">PART NO.</th>
                                        <th class="text-center">UOM</th>
                                        <th class="text-center">QTY</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td class="text-center"><span t-esc="line_index + 1"/></td>
                                            <td class="text-center"><span t-esc="line.item_no"/></td>
                                            <td class="text-center"><span t-esc="line.description"/></td>
                                            <td class="text-center"><span t-esc="line.part_no"/></td>
                                            <td class="text-center"><span t-esc="line.uom.name or ''"/></td>
                                            <td class="text-center"><span t-esc="line.qty"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>