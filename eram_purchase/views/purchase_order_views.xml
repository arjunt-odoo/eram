<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form_inherit_eram_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit_eram_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="required">state == 'purchase'</attribute>
            </field>
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button name="action_set_as_sent" invisible="state != 'draft'" type="object" class="btn btn-primary" string="Mark as Sent"/>
            </xpath>
            <field name="currency_id" position="after">
                <field name="e_supplier_quote_id" readonly="state == 'purchase'"/>
                <field name="e_project_id" readonly="state == 'purchase'"/>
                <field name="task_id" readonly="state == 'purchase'"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page name="bills" string="Bills">
                    <field name="e_bill_ids"/>
                </page>
            </xpath>
            <field name="project_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
</odoo>