<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form_inherit_eram_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit_eram_purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="required">state == 'purchase'</attribute>
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_pr" type="object" icon="fa-file-text-o" invisible="not eram_pr_id">
                    <div class="o_field_statinfo">
                        <span class="o_stat_text">Purchase Request</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button name="action_set_as_sent" invisible="state != 'draft'" type="object" class="btn btn-primary" string="Mark as Sent"/>
            </xpath>
            <field name="partner_id" position="before">
                <field name="e_our_ref" invisible="state == 'purchase'"/>
                <field name="e_date" invisible="state == 'purchase'"/>
                <field name="e_our_bid_closing_date" invisible="state == 'purchase'"/>
                <field name="e_send_offer_by" invisible="state == 'purchase'"/>
                <field name="e_order_line_count" invisible="state == 'purchase'"/>
            </field>
            <field name="l10n_in_gst_treatment" position="attributes">
                <attribute name="invisible">state in ('draft', 'sent')</attribute>
            </field>
            <xpath expr="//notebook//page[@name='products']" position="after">
                <page name="Quotes">
                    <field name="e_quote_ids">
                        <list>
                            <field name="quote_no"/>
                            <field name="quote_date"/>
                            <field name="partner_id"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>