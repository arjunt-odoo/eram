<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="eram_supplier_quote_view_form" model="ir.ui.view">
        <field name="name">eram.supplier.quote.view.form</field>
        <field name="model">eram.supplier.quote</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_po" string="Create PO" invisible="purchase_id"
                            class="btn btn-primary" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_rfq" type="object" icon="fa-file-text-o" invisible="not rfq_id">
                            <div class="o_field_statinfo">
                                <span class="o_stat_text">RFQ</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" name="action_view_po" type="object" icon="fa-file" invisible="not purchase_id">
                            <div class="o_field_statinfo">
                                <span class="o_stat_text">Purchase Order</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="quote_no"/>
                            <field name="quote_date"/>
                            <field name="partner_id"/>
                            <field name="purchase_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Order Lines">
                            <field name="line_ids" readonly="purchase_id">
                                <list editable="bottom">
                                    <field name="sl_no"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="item_code"/>
                                    <field name="part_no"/>
                                    <field name="make"/>
                                    <field name="qty"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="price_unit"/>
                                    <field name="total_untaxed"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="total_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="eram_supplier_quote_view_list" model="ir.ui.view">
        <field name="name">eram.supplier.quote.view.list</field>
        <field name="model">eram.supplier.quote</field>
        <field name="arch" type="xml">
            <list>
                <field name="quote_no"/>
                <field name="quote_date"/>
                <field name="partner_id"/>
            </list>
        </field>
    </record>
    <record id="action_eram_supplier_quote" model="ir.actions.act_window">
        <field name="name">Supplier Quote</field>
        <field name="res_model">eram.supplier.quote</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_eram_supplier_quote"
              action="action_eram_supplier_quote"
              sequence="40"/>
</odoo>